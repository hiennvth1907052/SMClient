@model IEnumerable<SMClient.ServiceReference1.Student>
@{
    ViewBag.Title = "Home Page";
}

<h2 class="text-center">STUDENT LIST</h2>
<div class="pull-right">
    @Html.ActionLink("Create New", "CreateStudent")
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Birthday</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.Birthday</td>
            <td>@item.Gender</td>
            <td>@item.Email</td>
            <td>@item.Introduction</td>
            <td>
                <i class="glyphicon glyphicon-pencil text-warning"></i>
                @Html.ActionLink("Edit", "UpdateStudent", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>